{
  "manifest_version": 3,
  "name": "Twitter Bookmarks Export - Local",
  "version": "1.7.0",
  "description": "ローカル版：Twitterブックマークをエクスポート",
  "default_locale": "en",
  "permissions": [
    "webRequest",
    "storage",
    "unlimitedStorage"
  ],
  "options_page": "html/settings.html",
  "background": {
    "service_worker": "background_local.js"
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {},
  "icons": {
    "128": "icon128.34baf118.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["download_result.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "js": ["content_local.js"],
      "run_at": "document_start",
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "css": []
    }
  ]
}